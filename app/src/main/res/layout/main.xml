			<org.neissa.input.KeyView neissa:special="SUPPR" android:text="" android:gravity="top|center" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" />
		</LinearLayout>
		<LinearLayout android:weightSum="10" android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="2" android:gravity="top|center">
			<org.neissa.input.KeyView neissa:short="a" neissa:long="A" android:text="a" android:gravity="top|center" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" />
			<org.neissa.input.KeyView neissa:short="z" neissa:long="Z" android:text="z" android:gravity="top|center" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" />
