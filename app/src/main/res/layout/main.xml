			<org.neissa.input.KeyView neissa:short="\@" neissa:long="\#" android:text="\@ #" android:gravity="top|center" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" />
			<org.neissa.input.KeyView neissa:short="€" neissa:long="$" android:text="€ $" android:gravity="top|center" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" />
