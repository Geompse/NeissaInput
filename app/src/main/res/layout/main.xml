			<org.neissa.input.KeyView neissa:short="o" neissa:long="O" android:text="o" android:gravity="top|center" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" />
			<org.neissa.input.KeyView neissa:short="p" neissa:long="P" android:text="p" android:gravity="top|center" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" />
		</LinearLayout>
		<LinearLayout android:weightSum="10" android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="2" android:gravity="top|center">
			<org.neissa.input.KeyView neissa:short="q" neissa:long="Q" android:text="q" android:gravity="top|center" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" />
			<org.neissa.input.KeyView neissa:short="s" neissa:long="S" android:text="s" android:gravity="top|center" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" />
			<org.neissa.input.KeyView neissa:short="d" neissa:long="D" android:text="d" android:gravity="top|center" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" />
			<org.neissa.input.KeyView neissa:short="f" neissa:long="F" android:text="f" android:gravity="top|center" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" />
			<org.neissa.input.KeyView neissa:short="g" neissa:long="G" android:text="g" android:gravity="top|center" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" />
			<org.neissa.input.KeyView neissa:short="h" neissa:long="H" android:text="h" android:gravity="top|center" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" />
